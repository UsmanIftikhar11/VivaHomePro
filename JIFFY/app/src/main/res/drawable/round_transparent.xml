<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    //background color
    <solid
        android:color="#00FFFFFF"/>

    //border color and thickness
    <stroke
        android:width="1dp"
        android:color="#BDC3C7"/>

    //padding with text
    <padding
        android:left="4dp"
        android:right="4dp"
        android:top="4dp"
        android:bottom="4dp"/>

    //corner radius
    <corners android:radius="10dp"/>

</shape>


